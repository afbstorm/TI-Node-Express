extends ../shared/layout.pug 

block main
    section.login-page
        h1.title #{title}

        div.forms
            form(action="/login", method="post") 
                label(for="email") Enter your email address
                input.login-inputs(type="email", name="email" placeholder="example@mail.com")
                label(for="password") Enter your password
                input.login-inputs(type="password", name="password" placeholder="Enter your password") 
                button.btn-submit(type="submit") Login

            p#not-member 
                a.links(href="/register") Not a member yet ? Create an account ! 